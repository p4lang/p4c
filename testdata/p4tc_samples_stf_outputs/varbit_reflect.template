#!/bin/bash -x

set -e

: "${TC:="tc"}"
$TC p4template create pipeline/varbit_reflect numtables 1

$TC p4template create action/varbit_reflect/ingress/reflect actid 1
$TC p4template update action/varbit_reflect/ingress/reflect state active

$TC p4template create action/varbit_reflect/ingress/drop actid 2
$TC p4template update action/varbit_reflect/ingress/drop state active

$TC p4template create table/varbit_reflect/ingress/nh_table \
	tblid 1 \
	type exact \
	keysz 32 permissions 0x3da4 tentries 2048 nummasks 1 \
	table_acts act name varbit_reflect/ingress/reflect \
	act name varbit_reflect/ingress/drop
$TC p4template update table/varbit_reflect/ingress/nh_table default_miss_action permissions 0x1024 action varbit_reflect/ingress/reflect
$TC p4template update pipeline/varbit_reflect state ready