#!/bin/bash -x

set -e

: "${TC:="tc"}"
$TC p4template create pipeline/direct_meter_color numtables 1

$TC p4template create action/direct_meter_color/ingress/meter_exec actid 1
$TC p4template update action/direct_meter_color/ingress/meter_exec state active

$TC p4template create action/direct_meter_color/ingress/drop actid 2
$TC p4template update action/direct_meter_color/ingress/drop state active

$TC p4template create extern/root/DirectMeter extid 0x1C000000 numinstances 1 tc_acl 0x19b6 has_exec_method

$TC p4template create extern_inst/direct_meter_color/DirectMeter/ingress.global_meter instid 1 \
tc_numel 2048 \
tbl_bindable \
constructor param type ptype bit32 0 \
control_path tc_key index ptype bit32 id 1 param cir ptype bit64 id 2 param cbs ptype bit64 id 3 param pir ptype bit64 id 4 param pbs ptype bit64 id 5

$TC p4template create table/direct_meter_color/ingress/nh_table \
	tblid 1 \
	type exact \
	keysz 32 permissions 0x3da4 tentries 2048 nummasks 1 \
	pna_direct_meter DirectMeter/ingress.global_meter \
	table_acts act name direct_meter_color/ingress/meter_exec \
	act name direct_meter_color/ingress/drop
$TC p4template update table/direct_meter_color/ingress/nh_table default_miss_action permissions 0x1024 action direct_meter_color/ingress/drop
$TC p4template update pipeline/direct_meter_color state ready