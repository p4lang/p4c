#!/bin/bash -x

set -e

TC="tc"
$TC p4template create pipeline/send_to_port_example numtables 1

$TC p4template create action/send_to_port_example/MainControlImpl/next_hop actid 1 \
	param vport type bit32
$TC p4template update action/send_to_port_example/MainControlImpl/next_hop state active

$TC p4template create action/send_to_port_example/MainControlImpl/default_route_drop actid 2
$TC p4template update action/send_to_port_example/MainControlImpl/default_route_drop state active

$TC p4template create table/send_to_port_example/MainControlImpl/ipv4_tbl \
	tblid 1 \
	type exact \
	keysz 72 nummasks 8 permissions 0x3da4 tentries 1024 \
	table_acts act name send_to_port_example/MainControlImpl/next_hop \
	act name send_to_port_example/MainControlImpl/default_route_drop
$TC p4template update table/send_to_port_example/MainControlImpl/ipv4_tbl default_miss_action permissions 0x1024 action send_to_port_example/MainControlImpl/default_route_drop

$TC p4template create extern/root/Register extid 1 numinstances 1 tc_acl 0x19b6

$TC p4template create extern_inst/send_to_port_example/Register/MainControlImpl.reg1 instid 1 \
tc_numel 10
control_path tc_key index type bit32 id 1 param a_value type bit32 id 2
$TC p4template update pipeline/send_to_port_example state ready