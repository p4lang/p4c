# Makefile for a fake backend that is used for testing the P4-16 front-end.
# To be included in the main P4C compiler makefile

noinst_PROGRAMS += p4test
p4test_LDADD = libfrontend.la libp4ctoolkit.a

p4test_UNIFIED = \
    backends/p4test/p4test.cpp \
    backends/p4test/midend.cpp

noinst_HEADERS += backends/p4test/midend.h

cpplint_FILES += $(p4test_UNIFIED) $(p4test_NONUNIFIED)

# Tests

# Generated by the targets below
-include p4tests.mk
-include p14_to_16tests.mk

CLEANFILES += \
	p4tests.mk \
	p14_to_16tests.mk

# Unfortunately this does not rerun if a test is deleted.
p4tests.mk: $(GENTESTS) $(srcdir)/%reldir%/Makefile.am \
	    $(srcdir)/testdata/p4_16_samples/*.p4 $(srcdir)/testdata/p4_16_errors/*.p4 \
	    $(srcdir)/testdata/p4_16_samples $(srcdir)/testdata/p4_16_errors
	@$(GENTESTS) $(srcdir) p4 $(srcdir)/backends/p4test/run-p4-sample.py $^ >$@

p14_to_16tests.mk: $(GENTESTS) $(srcdir)/%reldir%/Makefile.am \
		   $(srcdir)/testdata/p4_14_samples/*.p4 \
		   $(srcdir)/testdata/p4_14_samples \
		   $(srcdir)/testdata/p4_14_samples/switch_*/switch.p4
	@$(GENTESTS) $(srcdir) p14_to_16 $(srcdir)/backends/p4test/run-p4-sample.py $^ >$@


# issue #13
XFAIL_TESTS += \
    p4/testdata/p4_16_samples/cast-call.p4.test
